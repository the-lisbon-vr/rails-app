<!DOCTYPE html>
<html>
  <head>
    <title>The Lisbon VR</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>

    <!-- script for google analytics -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-100104233-1', 'auto');
      ga('send', 'pageview');

    </script>

  </head>
  <body>
    <% bg_images = ['rodrigo-01.jpg', 'rodrigo-02.jpg', 'rodrigo-03.jpg' ] %>
    <div id="wrapper" style="background-image: linear-gradient(-45deg, rgba(30,30,30,0.8) 50%, rgba(30,30,30,0.9)), url(<%= asset_path bg_images.sample %>);">
      <%= render 'shared/flashes' %>
      <div id="navbar-tlvr">
        <%= render 'shared/navbar' %>
      </div>
      <div id="page-content">
        <%= yield %>
      </div>
      <div id="footer" class="<%= "hidden-xs" if current_page?(root_path) %>">
        <%= render 'shared/footer' %>
      </div>
    </div>
    <%= javascript_include_tag 'application' %>
    <%= yield(:after_js) %>
  </body>
</html>
