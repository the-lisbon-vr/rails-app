<div class="container">
  <div class="padded">

    <h2><%= @event.name %></h2>

    <h3>Descrição: <%= @event.description %></h3>
    <%= link_to t(".back_button"), events_path%>
    <h3>Local: <%= @event.location %></h3>

    <h3>Slots:</h3>
    <% @slots.each do |slot| %>
      <div class="slot">
        <p>Starts at: <%= slot.start_time %> | Duration: <%= slot.duration_minutes %>m</p>
      </div>

      <% if slot.user == nil %>
      <%= link_to t(".book_this_session"), slot_path%>
      <% else %>
        <p>Booked</p>
      <% end %>

    <% end %>

    <%= link_to t(".back_button"), events_path%>
  </div>
</div>
