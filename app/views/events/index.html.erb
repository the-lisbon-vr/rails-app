<div class="container">
  <div class="padded">
    <h2 class="text-center"><%= t('.main_title') %></h2>
    <% if @events.count == 0 %>
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
          <div class="slightly-padded">
            <p><%= t(".no_events") %></p>
          </div>
          <div class="slightly-padded text-center">
            <%= link_to t(".get_in_touch"), contact_path, class: "btn btn-brand-with-bg" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="row">
        <% @events.each do |event| %>
          <div class="col-xs-12 col-sm-6">
            <div class="event-card">
              <%= link_to t(".show_button"), event_path(event), class: "btn btn-brand-with-bg btn-event" %>
              <h4><%= event.name %></h4>
              <p class="smaller-text">
                <%= event.location %><br />
                <%= event.date.strftime("%-d/%-m/%Y") %>&ensp;//&ensp;<%= event.start_time.to_s(:time) %>&ndash;<%= event.end_time.to_s(:time) %>&ensp;//&ensp;â‚¬<%= '%.2f' % event.price_per_slot %> (<%= event.slot_duration_minutes %> mins)<br />
                <%= t('.slots_remaining') %>: <%= Slot.where(event_id: event.id).where(user_id: nil).count %>
              </p>
              <p><%= event.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
