<%= simple_form_for @event do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :date %>
    <%= f.input :start_time, selected: {hour: 11, minute: 0} %>
    <%= f.input :end_time, selected: {hour: 17, minute: 0} %>
    <%= f.input :description, as: :text %>
    <%= f.input :number_of_players %>
    <%= f.input :price_per_slot %>
    <%= f.input :slot_duration_minutes %>
    <%= f.input :time_between_slots %>
    <%= f.input :photo, as: :attachinary, label_html: { class: "btn btn-default" }, input_html: { class: "hidden" }, label: "Add photo?" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save changes", class: "btn-brand-with-bg" %>
  </div>
<% end %>
<div style="padding-top: 30px; text-align: right;">
  <p>Ignore the "Save changes" button below</p>
</div>

<%= content_for(:photo_upload_js) do %>
  $.cloudinary.config({ cloud_name: <%= ENV['CLOUD_NAME'] %>})

  $('.cloudinary-fileupload').bind('fileuploadprogress', function(e, data) {
    $('.progress_bar').css('width', Math.round((data.loaded * 100.0) / data.total) + '%');
  });
<% end %>
