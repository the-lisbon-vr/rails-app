<!-- Scaffolding generated by Casein v5.2.0.0 -->

<h2>View slot</h2>

<h3>
  Event: <%= @event.name  %> (event id: <%= @event.id  %>)
</h3>
<h3>
  Slot booked by user: <%= @user.first_name  %> <%= @user.last_name  %>
</h3>
<p>
  User email: <%= @user.email  %>
</p>

<p>
  start time: <%= @slot.start_time.to_s(:time) %>
</p>


<%= form_for @slot, url: casein_slot_path(@slot) do |f| %>

  <%= render partial: 'casein/slots/form', locals: { f: f } %>

  <p class="submits">
    <%= link_to "Back to this slot's event", casein_event_path(id: @slot.event.id), class: 'btn btn-mini btn-danger' %>
    <%= f.submit "Save changes", class: "btn btn-mini btn-primary" %>
  </p>

<% end %>

<%= content_for :sidebar do %>
  <li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_slots_path %></li>
<% end %>
